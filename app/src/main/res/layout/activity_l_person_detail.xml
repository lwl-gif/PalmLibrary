<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:scaleX="1">

    <TextView
        android:id="@+id/l_person_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cyan"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/role_librarian"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_body_all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l_person_title"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--输入工号的行-->
            <TextView
                android:id="@+id/l_person_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/librarianId"
                android:textColor="@color/cyan"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/l_person_workplace"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/l_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/l_person_id"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/l_person_id"
                app:layout_constraintTop_toTopOf="@+id/l_person_id" />

            <!--输入姓名的行-->
            <TextView
                android:id="@+id/l_person_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/librarianName"
                android:textColor="@color/cyan"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/l_person_workplace"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/l_person_id"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/l_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/l_person_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/l_person_name"
                app:layout_constraintTop_toTopOf="@+id/l_person_name" />

            <!--输入性别的行-->
            <TextView
                android:id="@+id/l_person_sex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/librarianSex"
                android:textColor="@color/cyan"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/l_person_workplace"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/l_person_name"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/l_sex"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/l_person_sex"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/l_person_sex"
                app:layout_constraintTop_toTopOf="@+id/l_person_sex" />

            <!--输入年龄的行-->
            <TextView
                android:id="@+id/l_person_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/librarianAge"
                android:textColor="@color/cyan"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/l_person_workplace"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/l_person_sex"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/l_age"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/l_person_age"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/l_person_age"
                app:layout_constraintTop_toTopOf="@+id/l_person_age" />

            <!--输入工作地点的行-->
            <TextView
                android:id="@+id/l_person_workplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/librarianWorkplace"
                android:textColor="@color/cyan"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/l_person_age"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/l_workplace"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/l_person_workplace"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/l_person_workplace"
                app:layout_constraintTop_toTopOf="@+id/l_person_workplace" />

            <!--输入用户名的行-->

            <TextView
                android:id="@+id/l_person_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/librarianUsername"
                android:textColor="@color/cyan"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/l_person_workplace"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/l_person_workplace"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/l_username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/l_person_username"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/l_person_username"
                app:layout_constraintTop_toTopOf="@+id/l_person_username" />

            <!--输入权限级别的行-->
            <TextView
                android:id="@+id/l_person_permission"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/librarianPermission"
                android:textColor="@color/cyan"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/l_person_workplace"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/l_person_username"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/l_permission"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/l_person_permission"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/l_person_permission"
                app:layout_constraintTop_toTopOf="@+id/l_person_permission" />

            <!--定义修改按钮的行-->
            <Button
                android:id="@+id/btn_out"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn01_theme"
                android:text="@string/quitAndClean"
                android:textColor="@color/red"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/l_person_permission" />

            <Button
                android:id="@+id/btn_reload"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/buttonUpdate"
                android:textColor="@color/cyan"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_out"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_out"
                app:layout_constraintTop_toTopOf="@+id/btn_out" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>